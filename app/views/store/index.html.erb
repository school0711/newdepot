<p id="notice"><%= notice %></p>

<h1>The <abbr title="Greatest Of All Time">G.O.A.T</abbr> Greatest Of All Time</h1>


<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %>
        <%= number_to_currency(product.price) %>
        <%= button_to 'Add to Cart', line_items_path(product_id: product), class:"w3-button w3-brown w3-border" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
